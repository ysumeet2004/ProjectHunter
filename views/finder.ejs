<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Find Projects</title>
</head>
<body>
<%- include('./partials/navbar') %>

<div class="container mt-4">
  <h2 class="text-center mb-4">Find Projects by Domain</h2>

  <form method="GET" action="/project/find" class="mb-4">
    <div class="row">
      <% const domains = ["Web Development", "App Development", "AI/ML", "Blockchain", "Cybersecurity", "Game Development", "Other"]; %>
      <% domains.forEach(domain => { %>
        <div class="col-md-3">
          <div class="form-check">
            <input 
              class="form-check-input" 
              type="checkbox" 
              name="domains" 
              value="<%= domain %>"
              id="<%= domain.replace(/\s+/g, '') %>"
              <%= selectedDomains.includes(domain) ? 'checked' : '' %>
            >
            <label class="form-check-label" for="<%= domain.replace(/\s+/g, '') %>">
              <%= domain %>
            </label>
          </div>
        </div>
      <% }) %>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Filter</button>
  </form>

  <% if (projects.length === 0) { %>
    <p>No projects found.</p>
  <% } else { %>
    <div class="row g-4">
      <% projects.forEach(project => { %>
        <div class="col-md-6 col-lg-4">
          <%- include('./partials/projectCard', { project }) %>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('./partials/scripts') %>
</body>
</html>
