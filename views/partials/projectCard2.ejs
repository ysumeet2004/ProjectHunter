<div class="card h-100 shadow-sm border-0">
  <div class="card-body d-flex flex-column">
    <h5 class="card-title"><%= project.title %></h5>
    <p class="card-text"><%= project.desc %></p>

    <div class="mt-auto">
      <p class="mb-1"><strong>Domain:</strong> <%= project.domain %></p>
      <p class="mb-1"><strong>Skills Required:</strong> <%= project.skills_req %></p>
      <p class="text-muted small mb-1">
        Created On: <%= new Date(project.createdOn).toLocaleDateString() %>
      </p>

      <% if (project.applicants && project.applicants.length > 0) { %>
  <a href="/project/<%= project._id %>/applicants" class="badge bg-primary text-decoration-none">
    Applicants: <%= project.applicants.length %>
  </a>
<% } else { %>
  <p class="badge bg-secondary">No Applicants Yet</p>
<% } %>

      

      
    </div>
  </div>
</div>
